<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Toolbox Meeting Form</title>
    <style>
      * { box-sizing: border-box; } body { font-family: Arial, sans-serif;
      font-size: 12px; color: #333; margin: 0; padding: 0; } .container {
      max-width: 800px; margin: auto; padding: 24px; border: 1px solid #eee; }
      .header { display: flex; justify-content: space-between; align-items:
      flex-start; border-bottom: 2px solid #000; padding-bottom: 10px;
      margin-bottom: 20px; } .header .info { flex: 1; } .header .logo {
      text-align: right; } .header .logo img { width: 100px; } .section {
      margin-bottom: 20px; } .section-title { background-color: #ff5f20; color:
      #fff; padding: 6px 10px; font-weight: bold; } .field-group { display:
      flex; flex-wrap: wrap; margin-top: 8px; } .field { width: 50%; padding:
      5px 10px; } .field.full { width: 100%; } .label { font-weight: bold;
      display: inline-block; margin-bottom: 2px; } .value { border-bottom: 1px
      solid #ccc; padding: 4px 0; } .signatures { display: flex; flex-wrap:
      wrap; gap: 20px; margin-top: 16px; } .signature-block { flex: 1;
      text-align: center; } .signature-block img { max-height: 60px;
      margin-bottom: 4px; } .acknowledgement { margin-top: 20px; } .ack-item {
      margin-bottom: 12px; border-bottom: 1px solid #ddd; padding-bottom: 8px; }
      .ack-item img { max-height: 40px; margin-top: 4px; } .footer { font-size:
      11px; color: #777; text-align: center; margin-top: 30px; border-top: 1px
      dashed #ccc; padding-top: 10px; }
    </style>
  </head>

  <body>
    <div class="container">
      <!-- Header -->
      <div class="header">
        <div class="info">
          <div><strong>Client Name:</strong> {{project.clientName}}</div>
          <div><strong>Project Title:</strong> {{project.title}}</div>
          <div><strong>Project ID:</strong> {{project.projectId}}</div>
        </div>
        <div class="logo">
          <img src="{{project.clientLogo.url}}" alt="Client Logo" />
        </div>
      </div>

      <!-- Meta Info -->
      <div class="section">
        <div class="section-title">Toolbox Meeting Details</div>
        <div class="field-group">
          <div class="field"><span class="label">Job Number:</span>
            <div class="value">{{jobNumber}}</div></div>
          <div class="field"><span class="label">Job Location:</span>
            <div class="value">{{jobLocation}}</div></div>
          <div class="field"><span class="label">Date:</span>
            <div class="value">{{formattedDate}}</div></div>
          <div class="field"><span class="label">Time:</span>
            <div class="value">{{time}}</div></div>
          <div class="field"><span class="label">Supervisor:</span>
            <div class="value">{{supervisor}}</div></div>
          <div class="field"><span class="label">Completed By:</span>
            <div class="value">{{completedBy}}</div></div>
          <div class="field"><span class="label">Number of Crew:</span>
            <div class="value">{{numberOfCrew}}</div></div>
        </div>
      </div>

      <!-- Document Meta -->
      <div class="section">
        <div class="section-title">Document Metadata</div>
        <div class="field-group">
          <div class="field"><span class="label">Document Number:</span>
            <div class="value">{{documentNumber}}</div></div>
          <div class="field"><span class="label">Issue Date:</span>
            <div class="value">{{formattedIssueDate}}</div></div>
          <div class="field"><span class="label">Revision Number:</span>
            <div class="value">{{revisionNumber}}</div></div>
        </div>
      </div>

      <!-- Topic -->
      <div class="section">
        <div class="section-title">Topic Discussed</div>
        <div class="field full">
          <div class="value">{{topicDiscussed}}</div>
        </div>
      </div>

      <!-- Notes -->
      {{#if additionalNotes}}
        <div class="section">
          <div class="section-title">Additional Notes</div>
          <div class="field full">
            <div class="value">{{additionalNotes}}</div>
          </div>
        </div>
      {{/if}}

      <!-- Signatures -->
      <div class="section">
        <div class="section-title">Signatures</div>
        <div class="signatures">
          <div class="signature-block">
            <div>Foreman/Supervisor</div>
            <img
              src="{{foremanOrSupervisorSignature}}"
              alt="Supervisor Signature"
            />
          </div>
          {{!-- {{#each conductedBySignature}} --}}
          <div class="signature-block">
            <div>Conducted By</div>
            <img src="{{conductedBySignature}}" alt="Conducted By Signature" />
          </div>
          {{!-- {{/each}} --}}
        </div>
      </div>

      <!-- Crew Acknowledgements -->
      {{#if acknowledgements.length}}
        <div class="section acknowledgement">
          <div class="section-title">Crew Acknowledgements</div>
          {{#each acknowledgements}}
            <div class="ack-item">
              <div><strong>{{fullName}}</strong></div>
              <img src="{{signature}}" alt="Signature" />
            </div>
          {{/each}}
        </div>
      {{/if}}

      <!-- Footer -->
      <div class="footer">
        Generated by Scopology – ©
        {{year}}
      </div>
    </div>
  </body>
</html>